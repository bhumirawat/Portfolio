{
  "version": 2,
  "name": "portfolio-server",
  "builds": [
    { "src": "index.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js",
      "methods": ["GET","POST","PUT","DELETE","OPTIONS"]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@your_mongo_env_var"
  }
}
